<p id="notice"><%= notice %></p>

<h1>Frequently Asked Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.content %></td>
        <td><%= link_to 'Show', news %></td>
        <% if current_user.admin %>
          <td><%= link_to 'Edit', edit_news_path(news) %></td>
          <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure to remove this FAQ entry?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin %>
  <br>
  <%= link_to 'New FAQ', new_news_path %>
<% end %>

<br>
<%= link_to 'Back to Dashboard', forms_path %>